{
  "name":        "aws-cloud-meta",
  "version":     "3.0.0",
  "description": "This meta-package can be used to limit AWS CDK versions to a specific version of the Cloud Assembly Schema.",
  "license":     "MIT",
  "homepage":    "https://github.com/Yogarine/aws-cloud-meta#readme",

  "scripts": {
    "cdk": "cdk"
  },

  "devDependencies": {
    "aws-cdk": "~1.39.0"
  },

  "peerDependencies": {
    "@aws-cdk/core":      "~1.39.0",
    "aws-cdk":            "~1.39.0",
    "source-map-support": "^0.5.0",

    "@aws-cdk/assert":    "~1.39.0",
    "@types/jest":        "^25.2",
    "@types/node":        "^10.17",
    "jest":               "^25.2",
    "ts-jest":            "^25.2",
    "ts-node":            "^8.1",
    "typescript":         "^3.7"
  },

  "peerDependenciesMeta": {
    "@aws-cdk/core":      { "optional": false },
    "aws-cdk":            { "optional": false },
    "source-map-support": { "optional": false },

    "@aws-cdk/assert":    { "optional": true },
    "@types/jest":        { "optional": true },
    "@types/node":        { "optional": true },
    "jest":               { "optional": true },
    "ts-jest":            { "optional": true },
    "ts-node":            { "optional": true },
    "typescript":         { "optional": true }
  }
}
